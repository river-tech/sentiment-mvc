         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <display-name>sentiment-mvc</display-name>
    <description>MVC-based Java web application for sentiment analysis</description>

